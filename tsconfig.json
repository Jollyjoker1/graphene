{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "rootDir": "src",
        "outDir": "build",
        "newLine": "LF",
        "importHelpers": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "sourceMap": false,
        "declaration": false,
        "rootDirs": [
            "src"
        ]
    },
    "exclude": [
        "node_modules",
        "test"
    ]
}